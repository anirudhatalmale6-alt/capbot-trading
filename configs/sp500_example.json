{
  "bot_id": "sp500_5m_vwap",

  "account": {
    "account_id": "${CAPITAL_ACCOUNT_ID}"
  },

  "market": {
    "epic": "US500",
    "resolution": "MINUTE_5",
    "warmup_bars": 600
  },

  "strategy": {
    "module": "capbot.strategies.vwap_pullback_rsi:VWAPPullbackRSI",
    "params": {
      "BODY_MIN": 0.65,
      "VOL_REL_MIN": 0.60,
      "RSI_PERIOD": 14,
      "RSI_LONG_MAX": 70,
      "RSI_SHORT_MIN": 30,
      "ATR_PERIOD": 14,
      "BEAR_PREV3_LONG": 2,
      "BULL_PREV3_SHORT": 2,
      "VWAP_DISTANCE_K": 0.15,
      "SL_ATR": 1.0,
      "TP_R_MULTIPLE": 3.0,
      "VOL_WINDOW": 20,
      "VWAP_TZ": "America/New_York",
      "DEBUG_CHECKS": true
    }
  },

  "risk": {
    "bot_equity": 25000,
    "risk_pct": 0.02,
    "value_per_point_per_size": 1.0
  },

  "schedule": {
    "timezone": "America/New_York",
    "rth_enabled": true,
    "rth_start": "09:30",
    "rth_end": "16:00",
    "no_trade_hours_berlin": [],
    "disable_thursday_utc": false
  },

  "trailing": {
    "enabled": true,
    "buffer_r": 0.10
  },

  "circuit_breaker": {
    "losses": 3,
    "cooldown_min": 60
  },

  "notifications": {
    "email_enabled": true
  },

  "poll_seconds": 30,
  "align_poll_to_bar": true
}
